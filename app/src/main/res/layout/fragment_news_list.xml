<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    <include layout="@layout/include_toolbar">

    </include>
</android.support.design.widget.AppBarLayout>
    <com.yalantis.phoenix.PullToRefreshView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ptr_column_list"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingVie...">
         <android.support.v7.widget.RecyclerView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/rcl_column_list"
             android:scrollbars="vertical">

         </android.support.v7.widget.RecyclerView>
    </com.yalantis.phoenix.PullToRefreshView>
    <include layout="@layout/layout_empty"></include>
    <include layout="@layout/layout_error"></include>
    <include layout="@layout/layout_loading"></include>
</LinearLayout>